#! /bin/bash

echo Rendering now...
echo Running Knitr...
Rscript -e "library(knitr); knit(input = './manuscript.Rmd', output = './manuscript.md')"
echo Running Pandoc...
pandoc --latex-engine=xelatex --template=customtemplate.tex -H options.sty -s ./manuscript.md -f markdown -t latex -o ./manuscript.pdf --biblio=citations.bib --csl=./science.csl
echo Making docx...
pandoc --template=customtemplate.tex -H options.sty -s ./manuscript.md -f markdown -o ./manuscript.docx --biblio=citations.bib --csl=./science.csl
